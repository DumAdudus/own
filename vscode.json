{
    "editor.fontFamily": "'PragmataPro', 'DejaVu Sans Mono'",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,

    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",

    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",

    "editor.rulers": [80, 100, 120],
    "editor.scrollBeyondLastLine": false,
    "editor.dragAndDrop": true,

    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,

    "editor.showFoldingControls": "always",

    "window.title": "${dirty}${activeEditorLong}${separator}${rootPath}",
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "maximized",
    "window.openFilesInNewWindow": "off",

    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "git.enabled": false,
    "extensions.autoUpdate": true,

    "terminal.integrated.fontFamily": "'PragmataPro', 'DejaVu Sans Mono'",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontLigatures": true,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.visible": true,
    "workbench.welcome.enabled": false,
    "workbench.colorTheme": "Wombat",
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.editor.closeOnFileDelete": false,
    "window.zoomLevel": 0,

    "python.formatting.provider": "yapf",
    "python.linting.pylintEnabled": true,
    "python.linting.pep8Enabled": true,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.lintOnTextChange": false,
    "python.autoComplete.addBrackets": true,
    "python.jediPath": "/usr/local/lib/python2.7/dist-packages/jedi",
    "[c]": {
        "editor.quickSuggestions": false
    }
}
